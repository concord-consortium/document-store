%ul.breadcrumbs
  %li= link_to 'Home', root_path
  %li= link_to 'Documents', documents_path
  %li.current
    %a{href: '#'}= @document.title

%p
  %b Title:
  = @document.title
%p
  %b Content:
  = @document.content
%p
  %b Shared:
  = @document.shared
- if @document.owner != current_user
  %p
    %b Owner:
    = @document.owner_id

- if can? :edit, @document
  = link_to 'Edit', edit_document_path(@document), class: :button
